<div class="row mt-4">
  <div class="col-12">
    <h1>Recipes</h1>
  </div>
</div>



  <% @recipes.each do |recipe| %>
    <div class="card recipe-card mt-4">
      <div class="row">
        <div class="col-4">
          <% if recipe.photo.attached? %>
            <%= cl_image_tag recipe.photo.key, crop: :fill, :class => "img-fluid" %>
          <% end %>
        </div>
        <div class="col-8 d-flex flex-column justify-content-center">
          <div class="row d-flex justify-content-end text-right">
            <div class="col-12">
              <% if recipe.category.present? %>
                <span class="badge badge-pill badge-primary text-white"><%= recipe.category.name %></span>
              <% end %>
              <span class="badge badge-pill badge-primary text-white"><%= recipe.duration %> Minutes</span>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <p><%= link_to recipe.name, recipe_path(recipe), class: "stretched-link" %></p>
              <p><%= recipe.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>


<%= link_to 'Add a Recipe', new_recipe_path, class: "btn mm-btn text-white mt-4 mb-4 text-center" %>


