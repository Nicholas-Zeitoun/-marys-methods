<div class="row">
  <div class="col-12 mt-4">
    <i class="fas fa-arrow-left olive-green"></i> <%= link_to "Back to recipes", recipes_path %>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-10">
    <h2><%= @recipe.name %></h2>
  </div>
  <div class="col-md-2 text-righ">
    <span class="badge badge-pill badge-primary text-white"><%= @recipe.duration %> Minutes</span>
  </div>
</div>

<div class="row mt-4 mb-4">
  <div class="col-12">
    <% if @recipe.photo.attached? %>
      <%= cl_image_tag @recipe.photo.key, height: 450, width: 600, crop: :fill, :class => "recipe-image" %>
      <%#= cl_image_tag @recipe.photo.key, crop: :fill, :class => "img-fluid" %>
    <% end %>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <h5 class="olive-green">Description</h5>
    <p><%= @recipe.description %></p>
  </div>
</div>

<hr>

<div class="row mt-4">
  <div class="col-12">
    <h5 class="olive-green">Ingredients</h5>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
        <li class="steel"><%= ingredient.description %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row mt-4 mb-4">
  <div class="col-12">
    <h5 class="olive-green">Steps</h5>
    <ul>
      <% @recipe.steps.each do |step| %>
        <li class="steel"> <%= step.description %></li>
      <% end %>
    </ul>
  </div>
</div>
