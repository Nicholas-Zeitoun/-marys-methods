<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path,  class: "navbar-brand" do %>
    <%= image_tag asset_path('marys-food-logo.svg') %>
    <% end %>

  <div class="d-flex">
    <%= form_tag recipes_path, method: :get, class: "d-inline-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Recipe"
      %>
    <% end %>
      <div class="pl-2">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Recipes", recipes_path, class: "nav-link olive-green" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Recipe", new_recipe_path, class: "nav-link terracotta" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Category", new_category_path, class: "nav-link terracotta" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag asset_path('avatar-placeholder.svg'), class: "avatar dropdown-toggle shadow-sm", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit Account", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link olive-green" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
